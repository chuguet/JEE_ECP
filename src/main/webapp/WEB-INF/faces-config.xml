<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	
	<navigation-rule>
		<from-view-id>/views/jsf/home.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>votarPage</from-outcome>
			<to-view-id>/views/jsf/votar.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>verVotacionesPage</from-outcome>
			<to-view-id>/views/jsf/verVotaciones.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>anadirTemaPage</from-outcome>
			<to-view-id>/views/jsf/anadirTema.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>eliminarTemaPage</from-outcome>
			<to-view-id>/views/jsf/eliminarTema.xhtml</to-view-id>
		</navigation-case>
		<!-- Por defecto -->
		<navigation-case>
			<to-view-id>/views/jsf/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/views/jsf/anadirTema.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>homePage</from-outcome>
			<to-view-id>/views/jsf/home.xhtml</to-view-id>
		</navigation-case>
		<!-- Por defecto -->
		<navigation-case>
			<to-view-id>/views/jsf/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/views/jsf/eliminarTema.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>homePage</from-outcome>
			<to-view-id>/views/jsf/home.xhtml</to-view-id>
		</navigation-case>
		<!-- Por defecto -->
		<navigation-case>
			<to-view-id>/views/jsf/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/views/jsf/votar.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>homePage</from-outcome>
			<to-view-id>/views/jsf/home.xhtml</to-view-id>
		</navigation-case>
		<!-- Por defecto -->
		<navigation-case>
			<to-view-id>/views/jsf/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/views/jsf/verVotaciones.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>homePage</from-outcome>
			<to-view-id>/views/jsf/home.xhtml</to-view-id>
		</navigation-case>
		<!-- Por defecto -->
		<navigation-case>
			<to-view-id>/views/jsf/home.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<application>
		<locale-config>
			<default-locale>es</default-locale>
			<supported-locale>en</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>i18n.messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>
</faces-config>
